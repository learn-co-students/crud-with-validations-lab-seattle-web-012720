<%= form_for(@song) do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %><br><br>

    <%= f.label :artist_name %>
    <%= f.text_field :artist_name %><br><br>

    <%= f.label "Released?" %> <br><br>
    <%= f.check_box :released %> <br><br>

    <%= f.label :release_year %>
    <%= f.number_field :release_year %><br><br>

    <%= f.label :genre %>
    <%= f.text_field :genre %><br>
    <br>
    <%= f.submit %>

<% end %>

<% if flash[:notice] %>
      <h2>There were some errors:</h2>
      <ul>
        <% flash[:notice].each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
<% end %>